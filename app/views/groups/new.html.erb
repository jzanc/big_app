<% provide(:title, 'Create Group') %>
<h1>Create Group</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@group) do |f| %>

      <%= render 'shared/group_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>



      <%= f.submit "Create Group", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

