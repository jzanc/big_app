<% provide(:title, @group.name) %>
<h1>
<%= @group.name %>
</h1>
<div class="row">
  <div class="span8">
    <% if @group.microposts.any? %>
      <h3>Posts (<%= @group.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
    <% if not @group.microposts.any? %>
      <h3>This group has no posts yet! </h3>
    <% end %>
  </div>
</div>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' , group: @group %>
      </section>
    </aside>
  </div>
<% end %>