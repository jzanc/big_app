<% provide(:title, @group.name) %>
<h1>
<%= @group.name %>, <%= @group.url %>
</h1>
<div class="row">
  <div class="span8">
    <% if @group.microposts.any? %>
      <h3>Microposts (<%= @group.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
